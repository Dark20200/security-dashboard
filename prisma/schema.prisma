// ---------- Generator & Datasource ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ---------- Enums ----------
enum Role {
  OWNER
  ADMIN
  PENDING
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// ---------- NextAuth core models ----------
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  // App-specific
  role          Role     @default(PENDING)
  banned        Boolean  @default(false)
  lastLogin     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  accessRequests AccessRequest[]
  logs           Log[]        @relation("TargetUserLogs")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @map("refresh_token")
  access_token      String?  @map("access_token")
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], name: "provider_providerAccountId")
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---------- Access Requests ----------
model AccessRequest {
  id        String        @id @default(cuid())
  userId    String
  status    RequestStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// ---------- Activity Logs ----------
model Log {
  id          String   @id @default(cuid())
  userId      String               // المستخدم اللي اتعمل عليه الإجراء
  action      String               // "User banned" | "User unbanned" | "Access revoked" | ...
  performedBy String               // اللي نفّذ (عادة OWNER)
  createdAt   DateTime @default(now())

  user User @relation("TargetUserLogs", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
